{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"problemMatcher": [
				"$rustc"
			],
			"command": "cargo ${input:command} --manifest-path ./rust/cargo/${input:rust_proj}/Cargo.toml",
			"label": "Slava: cargo"
		},
		{
			"type": "shell",
			"problemMatcher": [],
			"command": "go run ./go/*",
			"label": "Slava: go run"
		}
	],
	"inputs": [
		{
			"id": "rust_proj",
			"description": "Rust proj",
			"type": "pickString",
			"options": [
				"hello_cargo",
				"guessing_game"
			],
			"default": "guessing_game"
		},
		{
			"id": "command",
			"description": "exec command",
			"type": "pickString",
			"options": [
				"build",
				"check",
				"run"
			],
			"default": "run"
		}
	]
}